<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:paddingBottom="0dp"
    android:layout_height="wrap_content">
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    app:cardCornerRadius="5dp"
    app:elevation="5dp"
    app:cardElevation="10dp">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.android.volley.toolbox.NetworkImageView
            android:layout_gravity="center"
            android:id="@+id/find_imageView"
            android:layout_margin="5dp"
            android:layout_width="120dp"
            android:layout_height="150dp" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
     <TextView
         android:gravity="center"
         android:id="@+id/title_find"
         android:text="男童吃烤串摔倒 13厘米长竹签扎入口腔"
         android:textSize="20sp"
         android:textColor="#000"
         android:layout_margin="5dp"
         android:lines="3"
         android:layout_width="match_parent"
         android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/content_find"
            android:text="2月8日下午，河北邯郸3岁男童晨晨(化名)边玩闹边吃鸡柳烤串，不慎摔倒后，长13厘米的竹签从口腔内插入。
            后经北京儿童医院近2个小时的手术，晨晨体内插入的竹签才被取出。"
            android:textSize="15sp"
            android:layout_marginLeft="10dp"
            android:lines="3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/lable_find"
                android:text="标签:男童吃烤串 竹签扎口腔"
                android:textSize="10sp"
                android:textColor="#000"
                android:layout_marginStart="10dp"
                android:lines="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/date_find"
                android:text="2016-02-12"
                android:textSize="10sp"
                android:layout_gravity="right"
                android:layout_marginRight="10dp"
                android:lines="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>

</LinearLayout>