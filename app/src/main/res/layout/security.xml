<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:scrollbars="none"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/security_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.github.rahatarmanahmed.cpv.CircularProgressView
            android:id="@+id/progress_view"
            android:layout_gravity="center"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:padding="0dp"
            app:cpv_animAutostart="true"
            app:cpv_indeterminate="true"
            app:cpv_thickness="4dp" />
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@color/colorlight"
        android:layout_height="wrap_content">
        <com.bigkoo.convenientbanner.ConvenientBanner
            android:id="@+id/my_convenientBanner"
            android:layout_width="match_parent"
            app:canLoop="true"
            android:layout_height="150dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginLeft="30dp"
            android:textSize="20sp"
            android:textColor="#000"
            android:layout_gravity="left"
            android:layout_width="wrap_content"
            android:text="@string/title_security"
            android:layout_height="wrap_content" />

      <com.newthread.medicinebox.ui.view.MyGridView
          android:layout_marginTop="10dp"
          android:id="@+id/security_gridview"
          android:scrollbars="none"
          android:numColumns="4"
          android:horizontalSpacing="0dp"
          android:verticalSpacing="0dp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="#000"
            android:textSize="20sp"
            android:layout_marginLeft="30dp"
            android:layout_gravity="left"
            android:layout_width="wrap_content"
            android:text="@string/title_product"
            android:layout_height="wrap_content" />
        <com.newthread.medicinebox.ui.view.MyGridView
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/security_gridview1"
            android:scrollbars="none"
            android:numColumns="4"
            android:horizontalSpacing="0dp"
            android:verticalSpacing="0dp"
            android:layout_width="match_parent"
            android:layout_height="200dp"/>
    </LinearLayout>
</LinearLayout>
</ScrollView>