<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorWhite" />
    <LinearLayout
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <android.support.design.widget.TextInputEditText
        android:layout_margin="10dp"
        android:inputType="text"
        android:hint="@string/topic"
        android:id="@+id/help_topic"
        android:textColorHint="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:hint="@string/yourQuestion"
        android:id="@+id/medcinequestion"
        android:layout_margin="10dp"
        android:lines="10"
        android:background="@null"
        android:layout_width="match_parent"
        android:layout_height="100dp" />
   <!-- <com.newthread.medicinebox.ui.view.MyGridView
        android:id="@+id/select_images_gridView"
        android:layout_width="match_parent"
        android:scrollbars="none"
        android:layout_height="wrap_content"
        android:verticalSpacing="2dp"
        android:horizontalSpacing="2dp"
        android:stretchMode="columnWidth"
        />-->
        <android.support.v7.widget.RecyclerView
            android:id="@+id/select_images_gridView"
            android:layout_margin="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorWhite" />
    <LinearLayout
        android:background="@color/colorgray"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="48dp">
    <ImageView
        android:id="@+id/getHelpImage"
        android:layout_gravity="center"
        android:layout_marginStart="10dp"
        android:src="@drawable/ic_camera_alt_white_48dp"
        android:layout_width="36dp"
        android:layout_height="36dp" />
    <ImageView
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:src="@drawable/ic_tag_faces_white_48dp"
            android:layout_width="36dp"
            android:layout_height="36dp" />
        <ImageView
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:src="@drawable/ic_account_circle_white_48dp"
            android:layout_width="36dp"
            android:layout_height="36dp" />
    </LinearLayout>
</LinearLayout>
</ScrollView>