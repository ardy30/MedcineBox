<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:background="@color/colorgray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_margin="10dp"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/medicinename"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/medicinename"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="@null"
            android:inputType="text"
            android:lines="1" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorWhite" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:background="@color/colorgray"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="300dp">
    <EditText
        android:id="@+id/medcinequestion"
        android:layout_margin="10dp"
        android:lines="10"
        android:background="@null"
        android:layout_width="match_parent"
        android:layout_height="200dp" />
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/helpimg"
            android:layout_width="90dp"
            android:layout_height="90dp" />
        <ImageView
            android:layout_marginStart="10dp"
            android:layout_gravity="bottom|left"
            android:src="@drawable/ic_place_white_48dp"
            android:layout_width="36dp"
            android:layout_height="36dp" />
    </LinearLayout>
    </ScrollView>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorWhite" />
    <LinearLayout
        android:background="@color/colorgray"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="48dp">
    <ImageView
        android:id="@+id/getHelpImage"
        android:layout_gravity="center"
        android:layout_marginStart="10dp"
        android:src="@drawable/ic_camera_alt_white_48dp"
        android:layout_width="36dp"
        android:layout_height="36dp" />
    <ImageView
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:src="@drawable/ic_tag_faces_white_48dp"
            android:layout_width="36dp"
            android:layout_height="36dp" />
        <ImageView
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:src="@drawable/ic_account_circle_white_48dp"
            android:layout_width="36dp"
            android:layout_height="36dp" />
    </LinearLayout>
</LinearLayout>